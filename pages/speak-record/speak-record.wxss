.index-container {
    display: flex;
    flex-direction: column;
}

.header-container {
    padding: 40rpx 25rpx 20rpx;
    margin-bottom: 10rpx;
    box-shadow: 0px 1px 1px #dddddd;
    background-color: #fff;
}

.header-container .title {
    color: #333;
    font-size: 33rpx;
}

.header-container .swiper-container {
    position: relative;
    width: 100%;
    height: 425rpx;
    margin-top: 20rpx;
    border-radius: 10px;  
}

.header-container .swiper-container swiper-item,
.header-container .swiper-container swiper-item image {
    width: 100%;
    height: 100%;
    border-radius: 10px; 
}

.header-container .swiper-container text {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #fff;
    font-size: 25rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    background-color: rgba(0,0,0,0.5);
    border-bottom-left-radius: 10px;    
    border-bottom-right-radius: 10px;    
}

.header-container .cover {
    position: relative;
    width: 100%;
    height: 425rpx;
    margin-top: 20rpx;
}

.header-container .cover image {
    width: 100%;
    height: 100%;
    border-radius: 10px;    
}

.header-container .cover text {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #fff;
    font-size: 25rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    background-color: rgba(0,0,0,0.5);
    border-bottom-left-radius: 10px;    
    border-bottom-right-radius: 10px;    
}

.body-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 0 25rpx;
    background-color: #fff;
}

.body-container .info,.body-container .record {
    position: relative;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.body-container .info image {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.body-container .info text {
    color: #333;
    font-size: 30rpx;
}

.body-container .record image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.body-container .record .right {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.body-container .record .right .time {
    color: #ffb300;
    font-size: 25rpx;
    margin-bottom: 10rpx;
}

.body-container .record .right .tip {
    color: #b3b3b3;
    font-size: 25rpx;
}

.footer-container {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    width: 100%;
    height: 170rpx;
}

.footer-container image {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 170rpx;
}

.footer-container .left,
.footer-container .right {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 15rpx;
    color: #fff;
    font-size: 28rpx;
    min-width: 100rpx;
    min-height: 130rpx;
    z-index: 2;
}

.footer-container .middle {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 15rpx;
    color: #fff;
    font-size: 28rpx;
    min-width: 140rpx;
    min-height: 170rpx;
    margin: 0 100rpx;
    z-index: 2;
}