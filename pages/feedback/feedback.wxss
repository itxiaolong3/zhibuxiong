.feedback-container {
    padding: 70rpx;
}

.title {
    color: #333;
    font-size: 35rpx;
    margin: 30rpx 0 10rpx;
}

input {
    border: 1px solid #dddddd;
    border-radius: 5px;
    padding: 10rpx 15rpx;
    color: #333;
    font-size: 30rpx;
}

textarea {
    width: auto;
    height: 400rpx;
    border: 1px solid #dddddd;
    border-radius: 5px;
    padding: 10rpx 15rpx;
    color: #333;
    font-size: 30rpx;
}

.placeholder {
    color: #dcdbdb;
    font-size: 30rpx;
}

.btn-container {
    position: absolute;
    left: 50%;
    margin-top: 50rpx;
    margin-left: -125rpx;
	width: 250rpx;
	height: 70rpx;
    line-height: 70rpx;
	color: #fff;
	font-size: 35rpx;
	text-align: center;
	border-radius: 20px;
    background-color: #ffb300;
}
