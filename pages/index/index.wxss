


page {
    background-color: #f2f2f2;
}

.swiper-container {
    width: 100%;
    height: 280rpx;
}

.swiper-container image {
    width: 100%;
    height: 100%;
}

.list-container {
    background-color: #fff;
    box-shadow: 0px 1px 1px #dddddd;
    margin-bottom: 30rpx;
}

.list-container .item {
    position: relative;
    display: flex;
    align-items: center;
    height: 100rpx;
    padding: 0 35rpx;
}

.list-container .item image {
    width: 55rpx;
    height: 55rpx;
    margin-right: 30rpx;
}

.list-container .item text {
    color: #333;
    font-size: 30rpx;
}

.list-container .content {
    position: relative;
    top: -10rpx;
    padding-left: 120rpx;
    padding-right: 20rpx;
    padding-bottom: 20rpx;
    color: #666;
    font-size: 25rpx;
}