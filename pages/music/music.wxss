.title-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    color: #333;
    font-size: 33rpx;
    box-shadow: 0px 1px 1px #dddddd;
}

.list-container {
    padding: 0 25rpx 180rpx;
}

.list-container .item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25rpx 0;
    height: 110rpx;
    border-bottom: 1px solid #ddd;
}

.list-container .item .left {
    display: flex;
    align-items: center;
}

.list-container .item .left image {
    width: 30rpx;
    height: 30rpx;
    padding-left: 10rpx;
    padding-right: 20rpx;
    z-index: 2;
}

.list-container .item .left view {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 110rpx;
    padding: 25rpx 0;
}

.list-container .item .left view text:first-child {
    color: #464646;
    font-size: 25rpx;
}

.list-container .item .left view text:last-child {
    color: #c2c2c2;
    font-size: 20rpx;
}

.list-container .item .right {
    width: 30rpx;
    height: 30rpx;
    z-index: 2;
}

.footer-container {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 170rpx;
}

.footer-container image {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 170rpx;
}

.footer-container view {
    min-width: 140rpx;
    min-height: 170rpx;
    z-index: 2;
}