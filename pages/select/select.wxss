.select {
    position: relative;
    top: 200rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 110rpx;
}

.select .item {
    width: 220rpx;
    height: 220rpx;
    border: 1px solid #ddd;
    border-radius: 20rpx;
    padding: 30rpx;
}

.select .item image {
    width: 100%;
    height: 100%;
}

.select .item.active {
    border: 3px solid #8cc540;
    background-color: #f2f2f2;
}

.btn-container {
    position: relative;
    left: 50%;
    top: 450rpx;
    margin-left: -225rpx;
	width: 450rpx;
	height: 75rpx;
    line-height: 75rpx;
	color: #a09d9d;
	font-size: 40rpx;
	text-align: center;
	border-radius: 20px;
	background-color: #e8e6e6;
}

.btn-container.active {
    color: #fff;
    background-color: #ffb300;
}
