.speak-container {
    padding: 25rpx;
    background-color: #fff;
}

.upload-container {
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    padding-bottom: 15rpx;
}

.upload-container text {
    color: #1a1a1a;
    font-size: 33rpx;
}

.upload-container .img-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-end;
    width: 450rpx;
    z-index: 2;
}

.upload-container .img-container .img {
    position: relative;
    width: 115rpx;
    height: 115rpx;
    z-index: 2;
    margin-left: 15rpx;
    margin-top: 15rpx;
}

.upload-container .img-container .img .body {
    width: 100%;
    height: 100%;
    z-index: 2;
} 

.upload-container .img-container .img .delete {
    position: absolute;
    top: 0;
    right: 0;
    width: 30rpx;
    height: 30rpx;
    z-index: 2;
}

.upload-container .img-container .upload {
    width: 115rpx;
    height: 115rpx;
    margin-left: 15rpx;
    margin-top: 15rpx;
    z-index: 2;
}

.text-1 {
    color: #ccc;
    font-size: 30rpx;
    margin-top: 10rpx;
}

.text-2 {
    color: #ffb300;
    font-size: 33rpx;
    text-align: center;
    margin-top: 50rpx;
}

.text-3 {
    color: #666;
    font-size: 30rpx;
    padding: 20rpx 25rpx 60rpx;
}

input {
    flex: 1;
    margin-right: 10rpx;
    color: #1a1a1a;
    font-size: 33rpx;
}

.placeholder {
    color: #ccc;
}

.select {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 135rpx;
    height: 65rpx;
    color: #4d4d4d;
    font-size: 35rpx;
    border: 1px solid #7b7b7b;
    border-radius: 5px;
    z-index: 2;
}

.radio-container {
    display: flex;
    justify-content: space-around;
    margin-top: 40rpx;
}

.radio-container .title {
    color: #1a1a1a;
    font-size: 33rpx;
}

.radio-container .radio {
    display: flex;
    align-items: center;
}

.radio-container .radio image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.radio-container .radio text {
    color: #1a1a1a;
    font-size: 30rpx;
}

.btn-container {
    position: absolute;
    left: 50%;
    bottom: 100rpx;
    margin-left: -225rpx;
	width: 450rpx;
	height: 75rpx;
    line-height: 75rpx;
	color: #fff;
	font-size: 40rpx;
	text-align: center;
	border-radius: 20px;
    background-color: #ffb300;
}

.dialog-container {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    width: 80%;
    height: 300rpx;
    padding: 40rpx 30rpx;
    background-color: #fff;
    border-radius: 5px;
    border: 5rpx solid #b3b3b3;
    z-index: 9;
}

.dialog-container .content {
    color: #333;
    font-size: 28rpx;
}

.dialog-container .btn {
    margin: 0 auto;
	width: 150rpx;
	height: 50rpx;
    line-height: 50rpx;
	color: #fff;
	font-size: 25rpx;
	text-align: center;
	border-radius: 20px;
    background-color: #ffb300;
    margin-top: 50rpx;
}

.dialog-container image {
    position: relative;
    left: 105%;
    bottom: 295rpx;
    width: 35rpx;
    height: 35rpx;
}

.dialog-container2 {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 200rpx;
    margin: auto;
    width: 80%;
    height: 180rpx;
    padding: 15rpx;
    background-color: #fff;
    border-radius: 5px;
    border: 3rpx solid #b3b3b3;
    z-index: 9;
}

.dialog-container2 input {
    color: #333;
    font-size: 28rpx;
    border: 1px solid #ddd;
    padding: 10rpx 15rpx;
    width:calc(100% - 30rpx);
}

.dialog-container2 .btn {
    float: right;
	width: 150rpx;
	height: 50rpx;
    line-height: 50rpx;
	color: #fff;
	font-size: 25rpx;
	text-align: center;
	border-radius: 20px;
    background-color: #ffb300;
    margin-top: 20rpx;
}

.dialog-container2 image {
    position: relative;
    left: 100%;
    bottom: 135rpx;
    width: 35rpx;
    height: 35rpx;
}