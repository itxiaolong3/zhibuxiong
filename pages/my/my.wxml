<view class="index-container">
  <view class="header-container">
    <image class="bg" src="/images/other/my_bg.jpg" />
    <view class="header" catchtap="tap_item" data-id="0">
      <image class="avatar" src="{{avatar ? avatar : '/images/other/avatar.jpg'}}" />
      <text class="name">{{name ? name : '请点击登录'}}</text>
    </view>
  </view>
  <view class="list-container">
    <view class="item border-b" catchtap="tap_item" data-id="1">
      <image src="/images/icon/my-story.png" />
      <text>我的原创故事</text>
    </view>
    <view class="item border-b" catchtap="tap_item" data-id="7">
      <image src="/images/icon/my-story.png" />
      <text>我的阅读故事</text>
    </view>
  </view>
  <view class="list-container">
    <view class="item border-b" catchtap="tap_item" data-id="2">
      <image src="/images/icon/my-history.png" />
      <text>收听历史</text>
    </view>
    <view class="item border-b" catchtap="tap_item" data-id="3">
      <image src="/images/icon/my-collect.png" />
      <text>我的收藏</text>
    </view>
    <view class="item border-b" catchtap="tap_item" data-id="4">
      <image src="/images/icon/my-message.png" />
      <text>我的消息</text>
    </view>
  </view>
  <view class="list-container">
    <view class="item border-b" catchtap="tap_item" data-id="5">
      <image src="/images/icon/my-info.png" />
      <text>我的资料</text>
    </view>
  </view>
  <view class="list-container">
    <view class="item border-b" catchtap="tap_item" data-id="6">
      <image src="/images/icon/feedback.png" />
      <text>有话对熊熊说</text>
    </view>
  </view>
  <button class="kf_button" open-type="contact" session-from="weapp">
    <image class="kf_image" src="/images/other/kefu.png"></image>
  </button>
</view>