.header-container {
    width: 100%;
    height: 330rpx;
}

.header-container .bg {
    width: 100%;
    height: 330rpx;
}

.header-container .header {
    position: relative;
    bottom: 75%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.header-container .header .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
}

.header-container .header .name {
    color: #fff;
    font-size: 35rpx;
}

.list-container {
    background-color: #fff;
    box-shadow: 0px 1px 1px #dddddd;
    margin-bottom: 10rpx;
}

.list-container .item {
    position: relative;
    display: flex;
    align-items: center;
    height: 100rpx;
    padding: 0 35rpx;
}

.list-container .item image {
    width: 55rpx;
    height: 55rpx;
    margin-right: 30rpx;
}

.list-container .item text {
    color: #333;
    font-size: 35rpx;
}

.kefu {
    position: absolute;
    top: 50%;
    right: 0;
    width: 100rpx;
    height: 100rpx;
}


.kf_button {
    position: fixed;
    top: 50%;
    right: 0;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(255, 255, 255, 0);
    padding: 0;
    border-radius: 0;
    z-index: 9;
}

.kf_button::after {
    border: 0px;
}

.kf_button .kf_image {
    width: 100rpx;
    height: 100rpx;
}