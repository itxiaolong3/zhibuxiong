.index-container {
    display: flex;
    flex-direction: column;
}

.search-container {
	display: flex;
	align-items: center;
    width: 100%;
    height: 80rpx;
    padding: 10rpx 25rpx;
    background-color: #fff;
    box-shadow: 0px 1px 1px #dddddd;
    margin-bottom: 10rpx;
}

.search-container .search {
	flex: 1;
    display: flex;
    align-items: center;
    height: 60rpx;
    padding-left: 20rpx;
    background-color: #f2f2f2;
    border-radius: 5px;
    color: #333;
    font-size: 28rpx;
}

.search-container .search image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.search-container .search input {
	width: calc(100% - 80rpx);
	z-index: 2;
}

.search-container .btn {
	color: #ffb300;
	font-size: 30rpx;
	margin-left: 20rpx;
}

.result-container {
    flex: 1;
    background-color: #fff;
}

.result-container .title-container {
    display: flex;
    align-items: center;
    height: 80rpx;
    padding: 0 40rpx;
    box-shadow: 0px 1px 1px #dddddd;
    color: #666;
    font-size: 33rpx;
}

.list-container {
    padding: 0 25rpx;
}

.list-container .item {
    position: relative;
    display: flex;
    padding: 25rpx 15rpx;
}

.list-container .item .image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
}

.list-container .item .info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list-container .item .info .name {
    color: #333;
    font-size: 28rpx;
}

.list-container .item .info .bottom {
    display: flex;
}

.list-container .item .info .bottom view {
    display: flex;
    align-items: center;
    height: 100%;
}

.list-container .item .info .bottom image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.list-container .item .info .bottom text {
    color: #b3b3b3;
    font-size: 25rpx;
}