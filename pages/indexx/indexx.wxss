.search-container {
    width: 100%;
    height: 80rpx;
    padding: 10rpx 25rpx;
    background-color: #fff;
    box-shadow: 0px 1px 1px #dddddd;
    margin-bottom: 10rpx;
}

.search-container .search {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    border-radius: 5px;
    background-color: #f2f2f2;
}

.search-container .search image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.search-container .search text {
    color: #b3b3b3;
    font-size: 30rpx;
}

.swiper-container {
    width: 100%;
    height: 280rpx;
}

.swiper-container image {
    width: 100%;
    height: 100%;
}

.btn-container {
    display: flex;
    height: 110rpx;
    background-color: #fff;
    box-shadow: 0px 1px 1px #dddddd;
    padding: 10rpx 0;
    margin-bottom: 10rpx;
}

.btn-container .btn {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-container .btn image {
    width: 65rpx;
    height: 65rpx;
    margin-right: 10rpx;
}

.btn-container .btn text {
    color: #666;
    font-size: 25rpx;
}

.story-list,.zhubo-list {
    background-color: #fff;
}

.list-title {
    position: relative;
    display: flex;
    align-items: center;
    height: 85rpx;
    padding: 0 25rpx;
    color: #666;
    font-size: 35rpx;
}

.list-container {
    display: flex;
    flex-wrap: wrap;
    padding: 13rpx 13rpx 0;
}

.list-state {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    color: #ccc;
    font-size: 28rpx;
}

.story-list .story {
    flex: 0 0 50%;
    display: flex;
    flex-direction: column;
    padding: 0 13rpx;
}

.story-list .story .top {
    color: #333;
    font-size: 30rpx;
    max-width: 300rpx;
}

.story-list .story .middle {
    width: 100%;
    height: 335rpx;
    margin: 5rpx 0;
    border-radius: 10px;
}

.story-list .story .bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40rpx;
    padding: 0 5rpx;
}

.story-list .story .bottom .left {
    display: flex;
}

.story-list .story .bottom .left view {
    display: flex;
    align-items: center;
    height: 100%;
}

.story-list .story .bottom .left image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.story-list .story .bottom .left text {
    color: #b3b3b3;
    font-size: 25rpx;
}

.story-list .story .bottom .right {
    width: 30rpx;
    height: 30rpx;
}

.zhubo-list .zhubo {
    flex: 0 0 33.3%;
    display: flex;
    flex-direction: column;
    padding: 0 13rpx;
}

.zhubo-list .zhubo .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40rpx;
}

.zhubo-list .zhubo .top text {
    color: #333;
    font-size: 30rpx;
    max-width: 180rpx;
}

.zhubo-list .zhubo .top image {
    width: 30rpx;
    height: 30rpx;
}

.zhubo-list .zhubo .middle {
    width: 100%;
    height: 215rpx;
    margin: 5rpx 0;
    border-radius: 10px;
}

.zhubo-list .zhubo .bottom {
    display: flex;
    justify-content: flex-end;
    color: #b3b3b3;
    font-size: 28rpx;
}

.dialog-container {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    width: 80%;
    height: 355rpx;
    padding: 40rpx 30rpx;
    background-color: #fff;
    border-radius: 5px;
    border: 5rpx solid #b3b3b3;
    z-index: 9;
}

.dialog-container .content {
    color: #333;
    font-size: 28rpx;
}

.dialog-container .btn {
    margin: 0 auto;
	width: 260rpx;
	height: 50rpx;
    line-height: 50rpx;
	color: #fff;
	font-size: 25rpx;
	text-align: center;
	border-radius: 20px;
    background-color: #ffb300;
    margin-top: 50rpx;
}