.title-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    color: #333;
    font-size: 33rpx;
    box-shadow: 0px 1px 1px #dddddd;
}

.nav-container {
    position: relative;
    display: flex;
    justify-content: flex-end;
    height: 80rpx;
}

.nav-container view {
    display: flex;
    align-items: center;
    height: 100%;
    margin-right: 30rpx;
    z-index: 2;
}

.nav-container image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.nav-container text {
    color: #b3b3b3;
    font-size: 25rpx;
}

.list-container {
    padding: 0 25rpx 180rpx;
}

.list-container .item {
    position: relative;
    display: flex;
    justify-content: space-between;
    padding: 25rpx 0;
}

.list-container .item .right-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
    align-self: center;
    z-index: 2;
}

.list-container .item .alert {
    position: absolute;
    top: 80rpx;
    right: 60rpx;
    width: 150rpx;
    height: 150rpx;
    z-index: 3;
    display: flex;
    flex-direction: column;
    border: 5rpx solid #c8c9cb;
    border-radius: 10rpx;
    background-color: #fff;
}

.list-container .item .alert view {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    color: #595758;
    font-size: 25rpx;
}

.list-container .item .alert view:active {
    background-color: #e6e6e6;
}

.list-container .item .checkbox {
    align-self:center;
    width: 30rpx;
    height: 30rpx;
    padding-left: 10rpx;
    padding-right: 15rpx;
}

.list-container .item .image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
}

.list-container .item .info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list-container .item .info .name {
    color: #333;
    font-size: 28rpx;
}

.list-container .item .info .bottom {
    display: flex;
}

.list-container .item .info .bottom view {
    display: flex;
    align-items: center;
    height: 100%;
}

.list-container .item .info .bottom image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.list-container .item .info .bottom text {
    color: #b3b3b3;
    font-size: 25rpx;
}

.footer-container {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 170rpx;
}

.footer-container image {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 170rpx;
}

.footer-container navigator {
    min-width: 140rpx;
    min-height: 170rpx;
    z-index: 2;
}

