    position: relative;
    display: flex;
    align-items: center;
    padding-top: 20rpx;
}

.body-container .comment-item .avatar {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
     border-radius: 50%;
}

.body-container .comment-item .content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.body-container .comment-item .content .left {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.body-container .comment-item .content .left .top {
    color: #333;
    font-size: 30rpx;
    margin-bottom: 5rpx;
}

.body-container .comment-item .content .left .bottom {
    color: #666;
    font-size: 28rpx;
}

.body-container .comment-item .content .right {
    color: #b3b3b3;
    font-size: 22rpx;
}

.footer-container {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 170rpx;
    z-index: 3;
}

.footer-container image {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 170rpx;
}

.footer-container view {
    min-width: 140rpx;
    min-height: 170rpx;
    z-index: 3;
}

