.ad {
    width: 100%;
    height: 180rpx;
}

.header-container {
    padding: 20rpx 25rpx;
    box-shadow: 0px 1px 1px #dddddd;
    background-color: #fff;
}

.header-container .title {
    color: #333;
    font-size: 33rpx;
}

.header-container .swiper-container {
    position: relative;
    width: 100%;
    height: 425rpx;
    margin-top: 20rpx;
    border-radius: 10px;  
}

.header-container .swiper-container swiper-item,
.header-container .swiper-container swiper-item image {
    width: 100%;
    height: 100%;
    border-radius: 10px; 
}

.header-container .swiper-container text {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #fff;
    font-size: 25rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    background-color: rgba(0,0,0,0.5);
    border-bottom-left-radius: 10px;    
    border-bottom-right-radius: 10px;    
}

.header-container .cover {
    position: relative;
    width: 100%;
    height: 425rpx;
    margin-top: 20rpx;
}

.header-container .cover image {
    width: 100%;
    height: 100%;
    border-radius: 10px;    
}

.header-container .cover text {
    position: absolute;
    left: 0;
    bottom: 0;
    color: #fff;
    font-size: 25rpx;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
    background-color: rgba(0,0,0,0.5);
    border-bottom-left-radius: 10px;    
    border-bottom-right-radius: 10px;    
}

.header-container .title {
    color: #000;
    font-size: 30rpx;
    text-align: center;
}

.header-container .author {
    color: #c8c9cb;
    font-size: 25rpx;
    text-align: center;
    margin: 15rpx 0;
}

.header-container .image {
    position: relative;
    top: 30rpx;
    display: flex;
    justify-content: flex-end;
}

.header-container .image image {
    width: 70rpx;
    height: 25rpx;
    margin-left: 20rpx;
}

.header-container rich-text {
    font-size:28rpx;
    line-height:40rpx;
}

.nav-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    padding: 0 30rpx;
}

.nav-container .title {
    color: #666;
    font-size: 30rpx;
}

.nav-container .right {
    display: flex;
    align-items: center;
    z-index: 2;
}

.nav-container .right text {
    color: #ccc;
    font-size: 30rpx;
    margin-right: 15rpx;
}

.nav-container image {
    width: 20rpx;
    height: 35rpx;
}

.nav-container .left {
    display: flex;
    align-items: center;
    width: 80rpx;
    height: 80rpx;
    z-index: 2;
}

.nav-container .text2 {
    color: #333;
    font-size: 30rpx;
}
