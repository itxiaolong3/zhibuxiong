.dialog-container {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 200rpx;
    margin: auto;
    width: 80%;
    height: 400rpx;
    padding: 15rpx;
    background-color: #fff;
    border-radius: 5px;
    border: 3rpx solid #b3b3b3;
    z-index: 9;
}

.dialog-container textarea {
    color: #333;
    font-size: 28rpx;
    border: 1px solid #ddd;
    padding: 10rpx 15rpx;
    width:calc(100% - 30rpx);
    height:290rpx;
}

.dialog-container .btn {
    float: right;
	width: 150rpx;
	height: 50rpx;
    line-height: 50rpx;
	color: #fff;
	font-size: 25rpx;
	text-align: center;
	border-radius: 20px;
    background-color: #ffb300;
    margin-top: 10rpx;
}

.dialog-container image {
    position: relative;
    left: 100%;
    bottom: 380rpx;
    width: 35rpx;
    height: 35rpx;
}

