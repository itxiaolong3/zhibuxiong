    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 20rpx 10rpx;
}

.body-container .footer .left,.body-container .footer .right {
    display: flex;
    align-items: center;
    z-index: 2;
}

.body-container .footer .left image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 5rpx;
}

.body-container .footer .left text {
    color: #b6b6b6;
    font-size: 30rpx;
}

.body-container .footer .right image {
    width: 40rpx;
    height: 40rpx;
    margin-left: 25rpx;
    z-index: 2;
}

