.nav {
    display: flex;
    height: 60rpx;
    margin: 40rpx 25rpx;
}

.nav .item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #b3b3b3;
    font-size: 28rpx;
    border: 1px solid #b3b3b3;
}

.nav .item.active {
    color: #fff;
    border: 0;
    background-color: #f9be00;
}

.nav-1 {
    margin: 0 25rpx;    
}

.nav-1 .title {
    color: #000;
    font-size: 30rpx;
    text-align: center;
}

.nav-1 .content {
    color: #000;
    font-size: 28rpx;
    text-indent: 50rpx;
    padding: 25rpx;
}
/*  position: relative;
    top: 30rpx;
    display: flex;
    justify-content: flex-end; */
.nav-1 .image {
    display: flex;
    justify-content: flex-end;
    top: 30rpx;
    padding: 10px;
     position: relative;
     left:15px
}
.nav-1 .image button {
    display: inline;
    margin-left:0;
    margin-right:0;
    padding-left:0;
    padding-right:0;
    box-sizing:border-box;
    font-size:18px;
    text-align:center;
    text-decoration:none;
    line-height:0;
    border-radius:0;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#000000;
    background-color:transparent;
    padding:5px;

}
.nav-1 .image image {
    width: 80rpx;
    height: 28rpx;
}

.nav-1 rich-text {
    font-size:28rpx;
    line-height:40rpx;
}

.nav-1 .btn {
	width: 480rpx;
	height: 70rpx;
	background-color: #f9be00;
	margin: 0 auto 30rpx;
	color: #fff;
	font-size: 30rpx;
	line-height: 70rpx;
	text-align: center;
	border-radius: 50rpx;
}

.search-container {
    width: 100%;
    height: 80rpx;
    padding: 10rpx 25rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
}

.search-container .search {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    border-radius: 5px;
    background-color: #f2f2f2;
}

.search-container .search image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.search-container .search text {
    color: #b3b3b3;
    font-size: 30rpx;
}

.sort-container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 90rpx;
}

.sort-container .title {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 90rpx;
    padding: 0 25rpx;
    background-color: #fff;
}

.sort-container .title .left {
    width: 145rpx;
    height: 30rpx;
}

.sort-container .title .right {
    display: flex;
    align-items: center;
    color: #666;
    font-size: 30rpx;
    z-index: 2;
}

.sort-container .title .right image {
    width: 33rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

.sort-container .sort {
    display: flex;
    flex-direction: column;
    z-index: 3;
}

.sort-container .sort .item {
    position: relative;
    display: flex;
    align-items: center;
    min-height: 80rpx;
    padding: 0 25rpx;
    background-color: #fff;
    color: #666;
    font-size: 30rpx;
}

.list-container {
    padding: 0 25rpx;
}

.list-container .item {
    position: relative;
    display: flex;
    padding: 25rpx 0;
}

.list-container .item .checkbox {
    align-self:center;
    width: 30rpx;
    height: 30rpx;
    padding-left: 10rpx;
    padding-right: 15rpx;
}

.list-container .item .image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 10rpx;
}

.list-container .item .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.list-container .item .info .top {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-container .item .info .top .name {
    color: #333;
    font-size: 28rpx;
}

.list-container .item .info .top image {
    width: 70rpx;
    height: 25rpx;
}

.list-container .item .info .middle {
    position: relative;
    color: #c8c9ca;
    font-size: 25rpx;
}

.list-container .item .info .middle text {
    margin-right: 40rpx;
}

.list-container .item .info .bottom {
    display: flex;
}

.list-container .item .info .bottom view {
    display: flex;
    align-items: center;
    height: 100%;
}

.list-container .item .info .bottom image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.list-container .item .info .bottom text {
    color: #b3b3b3;
    font-size: 25rpx;
}

.list-state {
    color:#ccc;
    font-size:28rpx;
    text-align:center;
    height: 80rpx;
    line-height: 80rpx;
}
