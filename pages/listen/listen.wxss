.index-container {
    display: flex;
    flex-direction: column;
}

.search-container {
    width: 100%;
    height: 80rpx;
    padding: 10rpx 25rpx;
    background-color: #fff;
    box-shadow: 0px 1px 1px #dddddd;
    margin-bottom: 10rpx;
}

.search-container .search {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    border-radius: 5px;
    background-color: #f2f2f2;
}

.search-container .search image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.search-container .search text {
    color: #b3b3b3;
    font-size: 30rpx;
}

.btn-container {
    display: flex;
    min-height: 95rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
}

.btn-container .btn {
    position: relative;
    flex: 1;
    min-height: 95rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-container .btn text {
    color: #b3b3b3;
    font-size: 30rpx;
}

.sort-container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 90rpx;
}

.sort-container .title {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 90rpx;
    padding: 0 25rpx;
    background-color: #fff;
}

.sort-container .title .left {
    color: #333;
    font-size: 33rpx;
}

.sort-container .title .right {
    display: flex;
    align-items: center;
    color: #666;
    font-size: 30rpx;
    z-index: 2;
}

.sort-container .title .right image {
    width: 33rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

.sort-container .sort {
    display: flex;
    flex-direction: column;
}

.sort-container .sort .item {
    position: relative;
    display: flex;
    align-items: center;
    min-height: 80rpx;
    padding: 0 25rpx;
    background-color: #fff;
    color: #666;
    font-size: 30rpx;
}

.story-list {
    flex: 1;
    background-color: #fff;
}

.list-title {
    position: relative;
    display: flex;
    align-items: center;
    height: 85rpx;
    padding: 0 25rpx;
    color: #666;
    font-size: 35rpx;
}

.list-container {
    display: flex;
    flex-wrap: wrap;
    padding: 13rpx 13rpx 0;
}

.list-state {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    color: #ccc;
    font-size: 28rpx;
}

.story-list .story {
    flex: 0 0 50%;
    display: flex;
    flex-direction: column;
    padding: 10rpx 13rpx;
}

.story-list .story .top {
    color: #333;
    font-size: 30rpx;
    max-width: 300rpx;
}

.story-list .story .middle {
    width: 100%;
    height: 335rpx;
    margin: 5rpx 0;
    border-radius: 10px;
}

.story-list .story .bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40rpx;
    padding: 0 5rpx;
}

.story-list .story .bottom .left {
    display: flex;
}

.story-list .story .bottom .left view {
    display: flex;
    align-items: center;
    height: 100%;
}

.story-list .story .bottom .left image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 5rpx;
}

.story-list .story .bottom .left text {
    color: #b3b3b3;
    font-size: 25rpx;
}

.story-list .story .bottom .right {
    width: 30rpx;
    height: 30rpx;
}