.body-container {
    flex:1;
    display: flex;
    flex-direction: column;
    padding:0 25rpx 450rpx;
    background-color:#fff;
    height:200rpx;
}

.body-container .info {
    position: relative;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    min-height: 100rpx;
}

.body-container .info image {
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.body-container .info text {
    color: #333;
    font-size: 30rpx;
}

.body-container .record {
    position: relative;
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    min-height: 130rpx;
}

.body-container .record image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.body-container .record .right {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.body-container .record .right .time {
    color: #ffb300;
    font-size: 25rpx;
    margin-bottom: 10rpx;
}

.body-container .record .right .tip {
    color: #b3b3b3;
    font-size: 25rpx;
}

.alert {
    position: fixed;
    bottom: 200rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 250rpx;
    height: 200rpx;
    z-index: 3;
    display: flex;
    flex-direction: column;
    border: 5rpx solid #c8c9cb;
    border-radius: 10rpx;
    background-color: #fff;
}

.alert view {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    color: #595758;
    font-size: 28rpx;
}

.alert view:active {
    background-color: #e6e6e6;
}

.footer-container {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    width: 100%;
    height: 170rpx;
    z-index: 3;
}

.footer-container image {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 170rpx;
}

.footer-container .left,
.footer-container .right {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 15rpx;
    color: #fff;
    font-size: 28rpx;
    min-width: 100rpx;
    min-height: 130rpx;
    z-index: 2;
}

.footer-container .middle {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    padding-bottom: 15rpx;
    color: #fff;
    font-size: 28rpx;
    min-width: 140rpx;
    min-height: 170rpx;
    margin: 0 100rpx;
    z-index: 2;
}