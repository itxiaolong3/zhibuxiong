.index-container {
    display: flex;
    flex-direction: column;
}

.header-container {
    padding: 40rpx 25rpx 20rpx;
    margin-bottom: 10rpx;
    border-bottom: 10rpx solid #f2f2f2;
    background-color: #fff;
}

.header-container .title {
    color: #000;
    font-size: 30rpx;
    text-align: center;
}

.header-container .author {
    color: #c8c9cb;
    font-size: 25rpx;
    text-align: center;
    margin: 15rpx 0;
}

.header-container .image {
    position: relative;
    top: 30rpx;
    display: flex;
    justify-content: flex-end;
}

.header-container .image image {
    width: 70rpx;
    height: 25rpx;
    margin-left: 20rpx;
}

.header-container rich-text {
    font-size:28rpx;
    line-height:40rpx;
    /*text-indent: 40rpx;*/
}

