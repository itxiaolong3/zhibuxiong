/*遮罩*/

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    z-index: 7;
    visibility: hidden;
    -webkit-transition: opacity .3s,-webkit-transform .3s;
    transition: opacity .3s,transform .3s;
}

.mask.mask-in {
    visibility: visible;
    opacity: 1;
}

.mask.mask-out {
    opacity: 0;
}

/*禁止滑动*/

.unable-move {
    overflow: hidden;
    height: 100%;
}

/*童画故事样式*/

